extends layout

block head
  meta(name="description", content="NPN stats about user " + username)
  meta(name="keywords", content="npm, node, nodejs, node.js, stats, metrics, module, " + username)
  | <!--[if lt IE 9]><script language="javascript" type="text/javascript" src="/javascripts/vendor/excanvas.min.js" /><![endif]-->
  script(language="javascript", type="text/javascript").
    window.username = "#{username}";

block scripts
  script var view = new UserView();$(view.init);

block content
  h1=title
  div#loading
  div#user-info
  div.twitter-share.hide
  div#repositories
  a#show-more(href="#").hide Show more...
  div.twitter-share.hide