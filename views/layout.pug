doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/min/bundle.css')
    meta(name="robots", content="index, follow")
    meta(name="language", content="EN")
    meta(name="author", content="Matteo Figus")
    meta(name="distribution", content="global")
    block head
  body

    a(href="https://github.com/matteofigus/npm-stats-www")
      img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png", alt="Fork me on GitHub")

    block content

    div.forms
      div.form-half.forms-border
        p Search for a user in npm:
        form#user-form(action="/~redir")
          input.username(type="text", value=username, name="username")
          input(type="hidden", name="action", value="user")
          a.submit(href="#") Go

      div.form-half
        p Search for a module in npm:
        form#repository-form(action="/~redir")
          input.repositoryname(type="text", value=repository, name="repositoryname")
          input(type="hidden", name="action", value="repository")
          a.submit(href="#") Go

    div.social
      iframe(allowtransparency="true", frameborder="0", scrolling="no", src="//platform.twitter.com/widgets/follow_button.html?screen_name=matteofigus", style="width:230px; height:20px;")
      iframe#gh_badge(src="http://ghbtns.com/github-btn.html?user=matteofigus&repo=npm-stats-www&type=watch&count=true", allowtransparency="true", frameborder="0", scrolling="0", width="110", height="20")

    block links

    script(src="/min/bundle.js")
    block scripts
